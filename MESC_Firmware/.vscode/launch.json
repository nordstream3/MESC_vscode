{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "/home/jens/Downloads/mesc3.log" //"${command:pickArgs}"
            ]
        },
        {
            "name": "Debug with OpenOCD",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/F405RG/build/F405RG.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "STM32F405RG",
            "interface": "swd",
            "runToEntryPoint": "main", // else it starts at reset handler - not interested
            //"preLaunchTask": "Build all", // configured in tasks.json
            //"preLaunchCommands": ["make Cheap_FOCer_2"], // you can execute command instead of task
            "svdFile": "", // Include svd to watch device peripherals
            "swoConfig": {}, // currently (v1.7.0) not supported
            "showDevDebugOutput": "raw",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg",
            ]
        },
        {
            "name": "Debug with ST-Link",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceRoot}/F405RG/build/F405RG.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "stlink",
            "device": "STM32F405RG",
            "interface": "swd",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg",
            ]
        },
    ]
}
